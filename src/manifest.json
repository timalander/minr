{
  "name": "Minr",
  "version": "0.0.1",
  "description": "Displays a popup when cryptocurrency mining is detected in your browser",
  "manifest_version": 2,

  "permissions": [
    "webNavigation",
    "https://*/*",
    "http://*/*",
    "tabs"
  ],

  "browser_action": {
    "default_popup": "popup.html"
  },

  "background": {
    "scripts": ["scripts/background.js"],
    "persistent": false
  }
}
